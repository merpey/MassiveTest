<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/button_1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="1-Toast test"/>
        <Button
                android:id="@+id/button_2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/button_1"
                android:text="2-Intent test" />
        <Button
                android:id="@+id/button_3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/button_2"
                android:text="3-FaceDetect test" />
        <Button
                android:id="@+id/button_4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/button_3"
                android:text="4-FaceDetect2 test" />
        <Button
                android:id="@+id/button_5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/button_4"
                android:text="5-FaceDetect3 test" />
        <Button
                android:id="@+id/button_6"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/button_5"
                android:text="6-FaceDetect4 test" />
        <Button
                android:id="@+id/button_7"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/button_6"
                android:text="BUTTON" />
        <Button
                android:id="@+id/button_8"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/button_7"
                android:text="BUTTON" />
        <Button
                android:id="@+id/button_9"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/button_8"
                android:text="BUTTON" />
        <Button
                android:id="@+id/button_10"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/button_9"
                android:text="BUTTON" />

    </RelativeLayout>
</ScrollView>